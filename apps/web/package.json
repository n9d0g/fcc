{
	"name": "web",
	"private": true,
	"version": "3.20.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host --open",
		"build": "svelte-kit sync && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "npx playwright test tests",
		"test:ui": "playwright test --ui",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"fresh": "rm -rf node_modules .svelte-kit playwright-report test-results .unlighthouse && npm i && npm run format",
		"fresh:start": "npm run fresh && npm run dev",
		"unlighthouse": "npx unlighthouse --site fcccanada.ca",
		"unlighthouse:dev": "npx unlighthouse --site dev.fcccanada.ca"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.6.12",
		"@iconify/svelte": "^4.2.0",
		"@sanity/client": "^6.24.1",
		"@skeletonlabs/skeleton": "^4.0.0",
		"@skeletonlabs/skeleton-svelte": "^4.0.0",
		"@supabase/supabase-js": "^2.47.10",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-vercel": "^6.2.0",
		"@sveltejs/kit": "^2.15.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/vite": "^4.0.0",
		"date-fns": "^3.6.0",
		"nodemailer": "^6.9.16",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-icons": "^2.1.0",
		"svelte-youtube-embed": "^0.2.3",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.7.2",
		"vite": "^6.0.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@playwright/test": "^1.49.1",
		"@types/node": "^22.10.2",
		"@types/nodemailer": "^6.4.17",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"lint-staged": "^15.2.11",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"vitest": "^2.1.8"
	}
}